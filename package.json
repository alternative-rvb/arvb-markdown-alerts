{
  "name": "arvb-markdown-alerts",
  "displayName": "ARVB Markdown Alerts",
  "description": "Add beautiful, colorful alerts (success, info, warning, danger, spoiler) to your Markdown preview. Perfect for documentation and notes.",
  "version": "1.0.0",
  "publisher": "alternative-rvb",
  "author": {
    "name": "Alternative RVB"
  },
  "license": "MIT",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Formatters",
    "Other"
  ],
  "keywords": [
    "markdown",
    "alerts",
    "preview",
    "styling",
    "notifications",
    "admonitions",
    "callouts",
    "boxes",
    "documentation"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "badges": [
    {
      "url": "https://img.shields.io/github/license/alternative-rvb/arvb-markdown-alerts",
      "href": "https://github.com/alternative-rvb/arvb-markdown-alerts/blob/main/LICENSE",
      "description": "License"
    }
  ],
  "qna": "https://github.com/alternative-rvb/arvb-markdown-alerts/discussions",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "markdown.markdownItPlugins": true,
    "markdown.previewStyles": [
      "./media/alerts.css"
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "node node_modules/typescript/bin/tsc -p ./",
    "watch": "node node_modules/typescript/bin/tsc -watch -p ./",
    "package": "node node_modules/@vscode/vsce/vsce package"
  },
  "devDependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.80.0",
    "@vscode/vsce": "^3.2.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "markdown-it": "^14.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alternative-rvb/arvb-markdown-alerts"
  }
}
